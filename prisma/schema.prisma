generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id       // Clerk ID
  email     String   @unique
  firstName String?
  lastName  String?
  products  Product[]   
  createdAt DateTime @default(now())
  categories Category[]
  activities Activity[]
}

model Category {
  id        String    @id @default(cuid())
  name      String
  userId    String
  user      User      @relation(fields: [userId], references: id)
  products  Product[]
  createdAt DateTime  @default(now())

  @@unique([name, userId])
}

model Product {
  id        String   @id @default(cuid())
  name      String
  sku       String?  @unique
  price     Decimal  @db.Decimal(12,2)
  quantity  Int      @default(0)
  lowStockAt Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  userId    String
  user      User     @relation(fields: [userId], references: [id])

  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: id)

  @@index([userId, name])
  @@index([createdAt])
}

model Activity {
  id          String   @id @default(cuid())
  userId      String
  action      String
  entityType  String 
  entityName  String 
  details     String 
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}