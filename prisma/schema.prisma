generator client {
  provider = "prisma-client-node"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid()) // Ovde ćemo čuvati Clerk ID
  email     String   @unique
  firstName String?
  lastName  String?
  items     Item[]   // Primer za inventory sistem
  createdAt DateTime @default(now())
}

model Item {
  id        String   @id @default(cuid())
  name      String
  quantity  Int      @default(0)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}